<Page xmlns="http://schemas.nativescript.org/tns.xsd">
    <GridLayout rows="auto, *">
        <GridLayout class="control" columns="auto, *" rows="30, 30, 30, 30, 30, 25, 30, 30, 30, 30">
            <Label row="0" text="FlexDirection" verticalAlignment="center" />
            <FlexboxLayout row="0" col="1" flexWrap="wrap" alignContent="stretch">
                <Button text="row" tap="flexDirection" flexGrow="1" />
                <Button text="row-reverse" tap="flexDirection" flexGrow="1" />
                <Button text="column" tap="flexDirection" flexGrow="1" />
                <Button text="column-reverse" tap="flexDirection" flexGrow="1" />
            </FlexboxLayout>

            <Label row="1" text="FlexWrap" verticalAlignment="center" />
            <FlexboxLayout row="1" col="1" flexWrap="wrap" alignContent="stretch">
                <Button text="nowrap" tap="flexWrap" flexGrow="1" />
                <Button text="wrap" tap="flexWrap" flexGrow="1" />
                <Button text="wrap-reverse" tap="flexWrap" flexGrow="1" />
            </FlexboxLayout>

            <Label row="2" text="JustifyContent" verticalAlignment="center" />
            <FlexboxLayout row="2" col="1" flexWrap="wrap" alignContent="stretch">
                <Button text="flex-start" tap="justifyContent" flexGrow="1" />
                <Button text="flex-end" tap="justifyContent" flexGrow="1" />
                <Button text="center" tap="justifyContent" flexGrow="1" />
                <Button text="space-between" tap="justifyContent" flexGrow="1" />
                <Button text="space-around" tap="justifyContent" flexGrow="1" />
            </FlexboxLayout>

            <Label row="3" text="AlignItems" verticalAlignment="center" />
            <FlexboxLayout row="3" col="1" flexWrap="wrap" alignContent="stretch">
                <Button text="flex-start" tap="alignItems" flexGrow="1" />
                <Button text="flex-end" tap="alignItems" flexGrow="1" />
                <Button text="center" tap="alignItems" flexGrow="1" />
                <Button text="baseline" tap="alignItems" flexGrow="1" />
                <Button text="stretch" tap="alignItems" flexGrow="1" />
            </FlexboxLayout>

            <Label row="4" text="AlignContent" verticalAlignment="center" />
            <FlexboxLayout row="4" col="1" flexWrap="wrap" alignContent="stretch">
                <Button text="flex-start" tap="alignContent" flexGrow="1" />
                <Button text="flex-end" tap="alignContent" flexGrow="1" />
                <Button text="center" tap="alignContent" flexGrow="1" />
                <Button text="space-between" tap="alignContent" flexGrow="1" />
                <Button text="space-around" tap="alignContent" flexGrow="1" />
                <Button text="stretch" tap="alignContent" flexGrow="1" />
            </FlexboxLayout>

            <Label row="5" colSpan="2" text="--- selected item properties ---" />

            <Label text="order" row="6" />
            <FlexboxLayout row="6" col="1" alignContent="stretch">
                <Button text="0" tap="order" flexGrow="1" />
                <Button text="1" tap="order" flexGrow="1" />
                <Button text="2" tap="order" flexGrow="1" />
                <Button text="3" tap="order" flexGrow="1" />
                <Button text="4" tap="order" flexGrow="1" />
            </FlexboxLayout>

            <Label text="flex-grow" row="7" />
            <FlexboxLayout row="7" col="1" alignContent="stretch">
                <Button text="0" tap="flexGrow" flexGrow="1" />
                <Button text="1" tap="flexGrow" flexGrow="1" />
                <Button text="2" tap="flexGrow" flexGrow="1" />
                <Button text="3" tap="flexGrow" flexGrow="1" />
                <Button text="4" tap="flexGrow" flexGrow="1" />
            </FlexboxLayout>

            <Label text="flex-shrink" row="8" />
            <FlexboxLayout row="8" col="1" alignContent="stretch">
                <Button text="0" tap="flexShrink" flexGrow="1" />
                <Button text="1" tap="flexShrink" flexGrow="1" />
                <Button text="2" tap="flexShrink" flexGrow="1" />
                <Button text="3" tap="flexShrink" flexGrow="1" />
                <Button text="4" tap="flexShrink" flexGrow="1" />
            </FlexboxLayout>
        </GridLayout>

        <FlexboxLayout id="container" row="1" borderWidth="1" borderColor="black" margin="10">
            <Label text="row" tap="select" margin="10" />
            <Label text="row-reverse" tap="select" />
            <Label text="column" tap="select" />
            <Label text="column-reverse" tap="select" />
            <Label text="row" tap="select" />
            <Label text="row-reverse" tap="select" />
            <Label text="column" tap="select" />
            <Label text="column-reverse" tap="select" />
            <Label text="row" tap="select" />
            <Label text="row-reverse" tap="select" />
            <Label text="column" tap="select" />
            <Label text="column-reverse" tap="select" />
            <Label text="row" tap="select" />
        </FlexboxLayout>
    </GridLayout>
</Page>